# Simple way of bootstrapping angular app for prototyping purposes
snippet ngindex
	%html
		%head
			%script{:src => "https://ajax.googleapis.com/ajax/libs/angularjs/${1:1.0.1}/angular.js"}
		%body{"ng-app" => true}
			${2}
# Script tag importing base AngularJS file from CDN
snippet ngsa
	%script{:src => "https://ajax.googleapis.com/ajax/libs/angularjs/${1:1.0.1}/angular.js"}
	${2}
# A script tag holding Angular's template
snippet ngst
	%script{:type => "text/ng-template", :id => "${1:id}"}
		${2}
# A binding in AngularJS
snippet ngb
	{{${1:binding}}}${2}