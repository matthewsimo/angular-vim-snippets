# Simple way of bootstrapping angular app for prototyping purposes
snippet ngindex
	<html>
	<head>
		<script src="https://ajax.googleapis.com/ajax/libs/angularjs/${1:1.6.3}/angular.js"></script>
	</head>
	<body ng-app>

	${0}

	</body>
	</html>
# Script tag importing base AngularJS file from CDN
snippet ngsa
	<script src="https://ajax.googleapis.com/ajax/libs/angularjs/${1:1.6.3}/angular.js"></script>

	${0}
# A script tag holding Angular's template
snippet ngst
	<script type="text/ng-template" id="${1:id}">
	${0}
	</script>
# A binding in AngularJS
snippet ngb
	{{${1:binding}}}
# Bind a view to a model
snippet ngm
	ng-model="${1:model}"
# Disable a form element
snippet ngd
	ng-disabled="${1:model}"
# Conditionally render an element
snippet ngi
	ng-if="${1:expression}"
# Conditionally show an element
snippet ngs
	ng-show="${1:expression}"
